{
  "name": "figma-ghost-frames",
  "version": "1.0.0",
  "description": "Convert text elements into ghost frames for UI mockups",
  "main": "dist/code.js",
  "type": "module",
  "scripts": {
    "build": "bun build ./code.ts --outdir ./dist --target browser --external '@figma/plugin-typings' --minify",
    "watch": "bun build ./code.ts --outdir ./dist --target browser --external '@figma/plugin-typings' --watch",
    "dev": "bun run watch",
    "typecheck": "tsc --noEmit"
  },
  "author": "Karl Koch",
  "license": "MIT",
  "devDependencies": {
    "@figma/plugin-typings": "^1.82.0",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  }
}
